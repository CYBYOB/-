/* pages/add_family/add_family.wxss */

/* 页面公共样式 */
.add-text, .tip-text {
  color: #fff;
}

/* 整个页面的样式 */
.page {
  height: 1205rpx;
  background-color: #5D816B;
} 
.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 100rpx;
}
.content .top {
  position: relative;
  margin-top: 50rpx;
}
.top .bg {
  width: 563rpx;
  height: 732rpx;
  border-radius: 50rpx;
}

.top .add {
  position: absolute;
  bottom: -45rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  z-index: 100；
}
.top .share-btn {
  position: absolute;
  bottom: -45rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  background-image: url('http://www.520cyb.cn/mini/tongyou/images/add_family.png');
  background-size:100% 100%;
}

/* 底部文案 */
.add-text {
  font-size: 48rpx;
  margin: 60rpx 0 20rpx;
}
.tip-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5)
}
/* 底部跳过或完成按钮 */
.next > image {
  width: 210rpx;
  height: 96rpx;
  margin-top: 30rpx;
}