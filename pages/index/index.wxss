/**index.wxss**/

.top {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}
.location {
  display: flex;
  align-items: center;
}
.location-icon {
  width: 50rpx;
  height: 50rpx;
}
.search {
  display: flex;
  justify-content: center;
  align-items: center;
  /* 占有除"定位"外的剩余区域 */
  flex: 1;
  margin-left: 30rpx;
  border-radius: 20rpx;
  color: #ccc;
  background-color: #999;
}

/* 轮播图 */
.carousel-list {
  height: 400rpx;
}
.carousel-item {
  width: 100%;
}

/* 选择目的地与筛选 */
.destination {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-self: center;
  margin: 20rpx 0;
}

/* 横纵向的筛选 */
.filter {
  text-align: center;
}