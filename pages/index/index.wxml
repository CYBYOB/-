<!--index.wxml-->
<view>
  <view class="main-content">
    <!-- 顶部定位和搜索框 -->
    <view class="top">
      <view class="location" bindtap="onClickLocation">
        <image class="location-icon" src="/images/common/location.png"></image>
        <view class="location-text">中国</view>
      </view>
      <view class="search" bindtap="navigateToSearch">
        <icon type="search" size="40rpx"></icon>
        <input placeholder="地点 景点名字"></input>
      </view>
    </view>

    <!-- 轮播图 -->
    <view class="carousel">
      <swiper class="carousel-list" indicator-dots="true"   autoplay="true" interval="1500" duration="1500"   circular="true">
        <block wx:for="{{carousel_list}}" wx:key="key">
          <swiper-item>
            <image class="carousel-item" id="{{item.id}}"   src="{{item.src}}" bindtap="onClickCarousel"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>

    <!-- 选择目的地与筛选 -->
    <view class="choose">
      <view class="destination">
        <view class="line">------------------</view>
        <view class="mini-text">请选择目的地</view>
        <view class="line">------------------</view>
      </view>
    </view>

    <!-- 需要抽象成一个组件，后面统一写 -->
    <view class="filter">
      <scroll-view scroll-x scroll-with-animation>
        <view class="big-area-list">
          <block wx:for="{{big_area_list}}">
            <view id="{{item}}" class="{{area.big === item? 'big-area-item-active' : 'big-area-item'}}" bindtap="onChangeBigArea">
              {{item}}
            </view>
          </block>
        </view>
      </scroll-view>

      <view class="bottom">
        <scroll-view scroll-y scroll-with-animation>
          <view class="mini-area-list">
            <block wx:for="{{mini_area_list}}">
              <view id="{{item}}" class="{{area.mini === item? 'mini-area-item-active' : 'mini-area-item'}}" bindtap="onChangeMiniArea">
                {{item}}
              </view>
            </block>
          </view>
        </scroll-view>

        <!-- 右边的筛选结果展示 -->
        <view class="result">
          <view class="result-list">
            <block wx:for="{{result_list}}">
              <view id="{{item.id}}" class="result-item" style="background: url({{item.src}}) 0 0 /100% 100%;" bindtap="onClickSceneryItem">
                <view class="name">{{item.name}}</view>
                <view class="rate">{{item.rate}}%家庭选择</view>
                <view class="visit-time">建议游玩{{item.visit_time}}小时</view>
                <image id="{{item.id}}" src="{{item.checked? '/images/index/success.png' : '/images/index/add.png'}}" catchtap="onClickAddIcon"></image>
              </view>
            </block>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
